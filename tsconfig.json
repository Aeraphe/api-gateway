{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./app",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "lib": ["es2017", "dom","es6"],

    },
    "include": [
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "frontend"
    ],


}
